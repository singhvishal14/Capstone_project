@model IEnumerable<MVC.Models.EmpInfo>

@{
    ViewBag.Title = "Index";
}

<h2>Employee List</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th class="table-header">
            @Html.DisplayNameFor(model => model.EmailId)
        </th>
        <th class="table-header">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th class="table-header">
            @Html.DisplayNameFor(model => model.DateOfJoining)
        </th>
        <th class="table-header">
            @Html.DisplayNameFor(model => model.PassCode)
        </th>
        <th class="table-header"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="table-data">
                @Html.DisplayFor(modelItem => item.EmailId)
            </td>
            <td class="table-data">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="table-data">
                @Html.DisplayFor(modelItem => item.DateOfJoining)
            </td>
            <td class="table-data">
                @Html.DisplayFor(modelItem => item.PassCode)
            </td>
            <td class="table-data">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>
<style>
    table.table {
        background-color: #f5f5f5 !important;
    }

    .table-header {
        background-color: darkslategrey !important;
        color: whitesmoke !important;
    }

    .table-data {
        background-color: lightcyan !important;
    }
</style>
